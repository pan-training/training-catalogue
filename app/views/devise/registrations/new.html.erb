<div class="row wrapper">
  <div class="col-md-12">
    <div class="page-header">
      <%= page_title 'Registration' %>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <%= f.input :username, autofocus: true %>

            <%= f.input :email, required: true %>

            <%= f.input :publicize_email, as: :boolean, label: 'Make my email publicly visible' %>

            <%= f.input :password, required: true, input_html: { autocomplete: 'off' },
                        hint: "(#{@minimum_password_length} characters minimum)" if @minimum_password_length %>

            <%= f.input :password_confirmation, required: true, input_html: { autocomplete: 'off' } %>

            <% unless Rails.application.secrets.recaptcha[:sitekey].blank? -%>
                <div class="form-group">
                  <%= recaptcha_tags ajax: true %>
                </div>
            <% end -%>

            <%= f.input :processing_consent, as: :boolean, input_html: { autocomplete: 'off' },
                        label: "I have read and understood the #{link_to('privacy policy', privacy_path, target: :_blank)} and consent to the ExPaNDS/PaNOSC Training Catalogue processing my data.".html_safe %>

            <div class="actions">
              <%= f.submit "Register", :class => 'btn btn-primary' %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
      <div class="col-md-6" id="why-register">
        <h4>Registering on the ExPaNDS/PaNOSC Training Catalogue allows you to...</h4>
        <ul>
          <li>Subscribe to updates of upcoming events and new training materials in your fields of interest.</li>
          <li>Register your organization's training materials and events and increase their discoverability.</li>
          <li>Create training workflows to break down complex topics into separate steps.</li>
        </ul>
      </div>
    </div>
  </div>
</div>

