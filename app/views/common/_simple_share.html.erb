<!-- extra small buttons https://getbootstrap.com/docs/3.3/components/#btn-dropdowns-sizing -->
   <div>
    <a class="btn btn-xs btn-social-outline btn-fb-outline" href="https://www.facebook.com/sharer/sharer.php?u=<%= url %>" target="_blank" title="">
        <i class="fab fa-facebook-square"></i> 
    </a>  
      <a class="btn btn-xs btn-social-outline btn-tw-outline" href="https://twitter.com/intent/tweet?text=<%= title %>&amp;url=<%= url %>" target="_blank" title="">
        <i class="fab fa-twitter"></i> 
    </a>
    <a class="btn btn-xs btn-social-outline btn-rd-outline" href="https://www.reddit.com/submit?url=<%= url %>&title=<%= title %>" target="_blank" title="Share this post on Reddit">
      <i class="fab fa-reddit-alien" data-fa-transform="grow-4"></i>  
    </a>
    <a class="btn btn-xs btn-social-outline btn-in-outline" href="https://www.linkedin.com/shareArticle?mini=true&url=<%= url %>&amp;title=<%= title %>" target="_blank" title="">
      <i class="fab fa-linkedin-in" data-fa-transform="grow-2"></i>
    </a>    
  </div>



