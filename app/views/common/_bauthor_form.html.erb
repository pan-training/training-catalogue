<% index ||= 'replace-me-bauthor' %> <%# This is so we can render a blank version of this sub-form in the page, %>
                             <%# which can be dynamically cloned using JavaScript to add more ExternalResources to the main material form %>
<% field_name_prefix = "#{form_name}[bauthors_attributes][#{index}]" %> <%# This format is dictated by "accepts_nested_attributes_for" %>

<div class="form-inline bauthor-form" data-index="<%= index -%>">
  <%= hidden_field_tag("#{field_name_prefix}[id]", bauthor.id) %>



  <div class="form-group">
    <%= text_field_tag "#{field_name_prefix}[firstname]", bauthor.firstname, :class => 'form-control bauthor-firstname', :placeholder => 'first name', :title => 'first name' %>
  </div>

  <div class="form-group">
    <%= text_field_tag "#{field_name_prefix}[lastname]", bauthor.lastname, :class => 'form-control bauthor-lastname', :placeholder => 'last name', :title => 'last name' %>
  </div>
  
 
  <div class="form-group">
    <%= text_field_tag "#{field_name_prefix}[orcid]", bauthor.orcid, :class => 'form-control bauthor-orcid', :placeholder => 'ORCID(optional)', :title => 'ORCID(optional)' %>
  </div>  

  
  
  <label class="delete-bauthor-btn">
    &times;
    <%= hidden_field_tag "#{field_name_prefix}[_destroy]", '0', :autocomplete => 'off' %>
    <%= check_box_tag "#{field_name_prefix}[_destroy]", '1', false, :class => 'destroy-attribute', :autocomplete => 'off' %>
  </label>
  


</div>
